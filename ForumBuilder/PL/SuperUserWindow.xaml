<Window x:Class="PL.SuperUserWindow" Background="Ivory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SuperUserWindow" Height="400" Width="400">
    <Grid>
        <Menu Margin="0,0,0,346" Grid.RowSpan="2"  Name="MainMenu">
            <MenuItem Header="Actions" Click="MenuItem_Actions">
                <MenuItem Header="Create Forum" Name="CreateForum" />
                <MenuItem Header="Set/Change Forum preferences" Name="Set"/>
                <MenuItem Header="Create Sub-Forum" Name="CreateSub" />
                <MenuItem Header="Delete Post" Name="Delete"/>
                <Separator/>
                <MenuItem Header="Exit" Name="Exit"/>
            </MenuItem>
            <MenuItem Header="View" Click="MenuItem_View"/>
        </Menu>

        <Grid Name="createForum" Visibility="Visible" Margin="10,24,10,0" Grid.Row="1">
            <TextBlock FontFamily="Cooper Black" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Forum Name:" VerticalAlignment="Top" Height="18" Width="99" Margin="43,67,0,0"/>
            <TextBox Name="newForumName" Height="18" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="195,67,57,0"/>
            <TextBlock FontFamily="Cooper Black" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="99" Margin="43,97,0,0"><Run Text="Description:"/><LineBreak/><Run/></TextBlock>
            <TextBox Name="newForumDescription" Height="18" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="195,97,57,0"/>
            <TextBlock FontFamily="Cooper Black" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Margin="43,125,247,0" Text="Forum Rules:"/>
            <TextBox Name="newForumRules" Height="18" Margin="195,125,57,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock FontFamily="Cooper Black" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="99" Margin="43,155,0,0"><Run Text="Forum Policy:"/><LineBreak/><Run/></TextBlock>
            <TextBox Name="newForumPolicy" Height="18" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="195,155,57,0"/>
            <TextBlock FontFamily="Cooper Black" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Margin="43,185,202,0" Text="Admins userNames:"/>
            <TextBlock FontFamily="Cooper Black" TextWrapping="Wrap" Foreground="Red" VerticalAlignment="Top" Height="18" Margin="43,208,144,0" Text="* seperate names with comma"/>
            <TextBox Name="newAdminUserName" Height="18" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="195,185,57,0"/>
            <Button FontFamily="Cooper Black" Background="Beige" Content="Create Forum" HorizontalAlignment="Left" Margin="195,247,0,62" Width="120" Click="btn_addCouponFromSocial" RenderTransformOrigin="0.5,1.136"/>
            <TextBlock FontSize="30" FontFamily="Broadway" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Create New Forum" VerticalAlignment="Top" Height="47" Width="325"/>
        </Grid>

    </Grid>
</Window>
