        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddModerator" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" FontFamily="cooper black" FontSize="30" Content="Add Moderator" HorizontalAlignment="Left" Margin="30,34,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="105,199,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <Label x:Name="label1" Content="Moderator Name" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="moderatortextBox" HorizontalAlignment="Left" Height="23" Margin="128,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
