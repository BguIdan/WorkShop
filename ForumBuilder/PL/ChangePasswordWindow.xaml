<Window x:Class="PL.ChangePasswordWindow" Background="Ivory" ResizeMode="CanResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePasswordWindow" Height="300" Width="425">
    <Grid>
        <TextBlock FontSize="30" FontFamily="Cooper Black" TextWrapping="Wrap" Text="Chang Password" Width="260" VerticalAlignment="Top" Height="49" Margin="78,35,0,0" RenderTransformOrigin="0.69,0.544" HorizontalAlignment="Left"/>
        <TextBlock FontFamily="Cooper Black"  TextWrapping="Wrap" Text="Enter New Password :" Margin="64,118,0,0" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="142"/>
        <PasswordBox Name="NewPassword" Margin="0,116,70,0" Height="22" HorizontalAlignment="Right" Width="134" VerticalAlignment="Top"/>
        <Button FontFamily="Cooper Black" Width="100" Content="Change" Margin="0,204,70,0" Click="changeBtn" HorizontalAlignment="Right" Height="28" VerticalAlignment="Top"/>
        <Button FontFamily="Cooper Black" Width="100" Content="Back" Margin="78,204,0,0" Click="backToMain" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top"/>
    </Grid>
</Window>
