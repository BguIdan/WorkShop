<Window x:Class="PL.SubForumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SubForumWindow" Height="400" Width="400">
    <Grid>
        <DockPanel Margin="0,0,0,343">
            <Menu DockPanel.Dock="Top" Height="50"  Width="392">
                <MenuItem Header="Coupons" Click="MenuItem_Coupon">
                    <MenuItem Header="Add Coupon From Social Network" Name="Add"/>
                    <MenuItem Header="Search and Purchase Coupons" Name="Look"/>
                    <MenuItem Header="Rank Purchased Coupon" Name="Rank" />
                    <Separator />
                    <MenuItem Header="Exit" Name="Exit"/>
                </MenuItem>
                <MenuItem Header="My User"  >
                    <MenuItem Header="View My Purchased Coupons" Click="viewCoupons"/>
                </MenuItem>
                <MenuItem Header="Notifications"  >
                    <MenuItem Header="Set Notifications" Click="setNotifications"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Label Content="Sub-ForumName:"  Name="sForumName" FontFamily="Cooper Black" HorizontalAlignment="Left" Margin="25,43,0,0" VerticalAlignment="Top" Width="341" Height="23"/>
        <TextBlock FontSize="16" FontFamily="Broadway" TextWrapping="Wrap" VerticalAlignment="Top"
            	Text="Threads" Visibility="Visible" Height="32" Margin="158,88,158,0"
            	RenderTransformOrigin="0.78,0.757"/>
        <DataGrid x:Name="couponsView" 
                  AutoGenerateColumns="True" Margin="25,135,26,25" SelectionChanged="DataGrid_SelectionChanged" Loaded="DataGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Width="*"/>
                <DataGridTextColumn Header="Writer" Width="*"/>
                <DataGridTextColumn Header="Time Published" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
