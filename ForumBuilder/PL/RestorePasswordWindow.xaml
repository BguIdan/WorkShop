<Window ResizeMode="NoResize" x:Class="PL.RestorePasswordWindow" Background="Azure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RestorePasswordWindow" Height="400" Width="400">
    <Grid Margin="0,0,2,-3">
        <TextBlock FontSize="30" FontFamily="Broadway" HorizontalAlignment="Left" TextWrapping="Wrap" Text=" Password restore" VerticalAlignment="Top" Height="77" Width="310" Margin="49,41,0,0"/>
        <Image HorizontalAlignment="Left"  VerticalAlignment="Bottom"  Source="https://pbs.twimg.com/profile_images/3429043063/d387b6c4e5f737427b1bac143e76245e_400x400.jpeg" Height="81" Width="97" Margin="55,0,0,30" />
        <TextBlock FontSize="14" FontFamily="Broadway" HorizontalAlignment="Left" Margin="66,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="86"><Run Text="Please insert your id and email :"/><LineBreak/><Run/><LineBreak/><Run Text="Enter ID:"/><LineBreak/><LineBreak/><Run/></TextBlock>
        <TextBox Name="ID" HorizontalAlignment="Left" Height="19"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="119" RenderTransformOrigin="1.936,3.94" Margin="189,160,0,0" />
        <Button FontFamily="Broadway" Content="Send" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="1.467,2.136" Margin="0,0,84,50"  Click="SendDetails"/>
    </Grid>
</Window>
