<Window x:Class="PL.addPostAndThreadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="addPostAndThreadWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="whatToAdd" Content="whatToAdd" HorizontalAlignment="Left" Height="31" Margin="109,10,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="title" HorizontalAlignment="Left" Height="32" Margin="30,75,0,0" TextWrapping="Wrap" Text="title" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="content" HorizontalAlignment="Left" Height="97" Margin="30,130,0,0" TextWrapping="Wrap" Text="content" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="addButton" Content="add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="178,239,0,0" Click="addButton_Click"/>
        <Button x:Name="backButton" Content="back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="30,239,0,0" Click="backButton_Click"/>

    </Grid>
</Window>
