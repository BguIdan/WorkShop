<Window ResizeMode="NoResize" Background="Ivory" x:Class="PL.SignUpWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUpWindow" Height="400" Width="400">
    <Grid>
        <TextBlock FontSize="30" FontFamily="Cooper Black" TextWrapping="Wrap" Text="Register to Forum" VerticalAlignment="Top" Height="49" Margin="56,35,56,0" RenderTransformOrigin="0.69,0.544"/>
        <TextBlock FontFamily="Cooper Black"  TextWrapping="Wrap" VerticalAlignment="Top" Margin="56,129,56,0" Height="80" RenderTransformOrigin="0.489,1.137"><Run Text="Enter name :"/><LineBreak/><LineBreak/><Run Text="Enter Password :"/><LineBreak/><LineBreak/><Run Text="Enter Mail :"/><LineBreak/><Run/></TextBlock>
        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom"   Source="http://caymanroundup.com/wp-content/uploads/2014/02/register-online.jpg" Margin="56,0,0,27" Height="119" Width="119"/>
        <TextBox Name="name" Height="20" Margin="189,128,86,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox Name="mail" Height="20" Margin="189,180,86,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <PasswordBox Name="Password" Height="20" Margin="189,154,86,0" VerticalAlignment="Top"/>
        <Button FontFamily="Cooper Black" Content="Register" Margin="220,222,86,0" VerticalAlignment="Top" Height="22" Click="UserRegistration"/>
    </Grid>
</Window>
