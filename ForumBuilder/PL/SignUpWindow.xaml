<Window ResizeMode="CanResize" Background="Ivory" x:Class="PL.SignUpWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUpWindow" Height="425" Width="425">
    <Grid Margin="0,0,0,0">
        <TextBlock FontSize="30" FontFamily="Cooper Black" TextWrapping="Wrap" Text="Register to Forum" VerticalAlignment="Top" Height="49" Margin="56,35,56,0" RenderTransformOrigin="0.69,0.544"/>
        <TextBlock FontFamily="Cooper Black"  TextWrapping="Wrap" Text="Enter name :" Margin="56,138,255,235"/>
        <TextBlock FontFamily="Cooper Black"  TextWrapping="Wrap" Text="Enter Password :" Margin="56,166,228,210"/>
        <TextBlock FontFamily="Cooper Black"  TextWrapping="Wrap" Margin="56,190,265,183" Text="Enter Mail :"/>
        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="http://caymanroundup.com/wp-content/uploads/2014/02/register-online.jpg" Margin="56,0,0,27" Height="119" Width="119"/>
        <TextBox Name="name" Margin="189,138,86,235" TextWrapping="Wrap" Text="" Height="22"/>
        <PasswordBox Name="Password" Margin="189,163,86,210" Height="22"/>
        <TextBox Name="mail" Margin="189,190,86,183" TextWrapping="Wrap" Height="22"/>
        <Button FontFamily="Cooper Black" Content="Register" Margin="220,236,86,128" Click="UserRegistration"/>
    </Grid>
</Window>
